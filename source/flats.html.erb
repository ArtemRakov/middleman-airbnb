<div class="banner" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/berlin'); height: 50vh; background-position: center;">
  <div class="banner-content">
  </div>
</div>



<div class="container flats-page">
 <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="content">
        <div class="image-info text-center">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "img-circle", style: "height: 80px;" %>
          <p> Ssaunier </p>
        </div>
        <div class="description-info">
          <h2> Charming room in Montmartre </h2>
          <p> Paris, France </p>
          <div class="stars">
            <i class="fa fa-star" style="color: #ffb400; font-size: 16px;"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 book-content" style="background-color: #F4F4F4">
      <h4>Book this flat</h4>
      <div class="form-flats">
        <form action="#">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <input type="text" id="where" class="form-control" placeholder="CheckIn">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <input type="text" id="when" class="form-control" placeholder="CheckOut">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="guests" id="people" class="form-control ">
              <option value="guest_1"> 1 guest </option>
              <option value="guest_2"> 2 guests </option>
              <option value="guest_3"> 3 guests </option>
            </select>
          </div>
          <input type="submit" value="Book it" class="btn btn-danger btn-mine">
        </form>
      </div>
    </div>
  </div>
 </div>

<div class="wrap-grey">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="flat-description">
        <h2> About this flat </h2>
        <p id="text-smaller"> This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential area near city´s main Avenue - 3 minutes walk from Sacré Coeur. </p>
      </div>
      <div class="info-space">
        <div class="row">
          <div class="col-xs-12 col-sm-2">
            <p>The Space</p>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li> Accommodates: <strong> 2 </strong> </li>
              <li> Bathrooms: <strong> 1 </strong> </li>
              <li> Bed type: <strong> Real Bed </strong> </li>
              <li> Bedrooms: <strong> 1 </strong> </li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li> Beds: <strong> 1 </strong> </li>
              <li> Property type: <strong> Apartment </strong> </li>
              <li> Room type: <strong> Entire home/apt </strong> </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="info-space">
        <div class="row">
          <div class="col-xs-12 col-sm-2">
              <p>Amenities</p>
          </div>
          <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li> <i class="fa fa-cutlery icons-large fa-fw" aria-hidden="true"></i>  <strong> Kitchen </strong> </li>
                <li> <i class="fa fa-wifi icons-large fa-fw" aria-hidden="true"></i>  <strong> Wifi </strong> </li>
              </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled">
                <li> <i class="fa fa-desktop icons-large fa-fw" aria-hidden="true"></i>  <strong> TV </strong> </li>
                <li> <i class="fa fa-glass icons-large fa-fw" aria-hidden="true"></i>  <strong> Welcome Drink </strong> </li>
              </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>











</div>
